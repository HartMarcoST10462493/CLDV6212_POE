@model ABCRetailers.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container py-4">
    <h2>Delete Customer</h2>
    <div class="alert alert-danger">Are you sure you want to delete this customer?</div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />
        <p><strong>@Model.Name @Model.Surname</strong> - @Model.Email</p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
