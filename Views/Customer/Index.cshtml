@model IEnumerable<ABCRetailers.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="container py-4">
    <h2>Customers</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>

    <table class="table table-striped table-hover shadow-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Username</th>
                <th>Email</th>
                <th>Shipping Address</th>
                <th style="width:200px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.ShippingAddress</td>
                    <td>
                        <a asp-action="Details" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
