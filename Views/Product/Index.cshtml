@model IEnumerable<ABCRetailers.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container py-4">
    <h2>Products</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Create New</a>

    <table class="table table-striped table-hover shadow-sm">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock Available</th>
                <th style="width:200px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@item.ProductName" style="width:60px; height:60px; object-fit:cover;" />
                        }
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.Description</td>
                    <td>$@item.Price</td>
                    <td>@item.StockAvailable</td>
                    <td>
                        <a asp-action="Details" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
