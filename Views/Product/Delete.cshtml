@model ABCRetailers.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-4">
    <h2>Delete Product</h2>
    <div class="alert alert-danger">Are you sure you want to delete this product?</div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />
        <p><strong>@Model.ProductName</strong> - $@Model.Price</p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
