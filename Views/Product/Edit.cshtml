@model ABCRetailers.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <h2>Edit Product</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="card shadow-sm p-4">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />

        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="StockAvailable" class="form-label"></label>
            <input asp-for="StockAvailable" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Change Image</label>
            <input type="file" name="image" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="mt-2" style="width:100px;height:100px;object-fit:cover;" />
            }
        </div>
        <button type="submit" class="btn btn-success">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
