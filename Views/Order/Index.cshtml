@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Orders</h2>
    <a class="btn btn-primary" asp-action="Create">Create New Order</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Product</th>
                <th>Qty</th>
                <th>Total</th>
                <th>Status</th>
                <th>Order Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <small class="text-muted">@item.RowKey.Substring(0, 8)...</small>
                    </td>
                    <td>@item.Username</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td><strong>$@item.TotalPrice.ToString("N2")</strong></td>
                    <td>
                        <span class="badge bg-@(item.Status == "Completed" ? "success" :
                                                                          item.Status == "Processing" ? "warning" :
                                                                          item.Status == "Cancelled" ? "danger" : "secondary")">
                        @item.Status
                    </span>
                </td>
                <td>@item.OrderDate.LocalDateTime.ToString("MM/dd/yyyy")</td>
                <td class="text-end">
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Details", "Details", new { partitionKey = item.PartitionKey, rowKey = item.RowKey }, new { @class = "btn btn-sm btn-outline-primary" })
                        @Html.ActionLink("Edit", "Edit", new { partitionKey = item.PartitionKey, rowKey = item.RowKey }, new { @class = "btn btn-sm btn-outline-warning" })
                        @if (item.Status == "Pending")
                            {
                                @Html.ActionLink("Pay", "Create", "Payment", new { orderId = item.RowKey }, new { @class = "btn btn-sm btn-success" })
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h5>No orders found</h5>
        <p>Create your first order to get started.</p>
        <a class="btn btn-primary" asp-action="Create">Create New Order</a>
    </div>
}