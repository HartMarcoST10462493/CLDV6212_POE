@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "Orders";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Orders</h2>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Product</th>
            <th>Qty</th>
            <th>Total</th>
            <th>Status</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>$@item.TotalPrice</td>
                <td>@item.Status</td>
                <td>@item.OrderDate.LocalDateTime</td>
                <td class="text-end">
                    @Html.ActionLink("Edit", "Edit", new { partitionKey = item.PartitionKey, rowKey = item.RowKey }) |
                    @Html.ActionLink("Details", "Details", new { partitionKey = item.PartitionKey, rowKey = item.RowKey }) |
                    @Html.ActionLink("Delete", "Delete", new { partitionKey = item.PartitionKey, rowKey = item.RowKey })
                </td>
            </tr>
        }
    </tbody>
</table>
